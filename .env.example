# Configuration de l'application Scory-bot

# Base de données MongoDB
MONGO_URL=mongodb://localhost:27017/scory-bot
MONGO_TEST_URL=mongodb://localhost:27017/scory-bot-test

# Configuration du serveur API
API_PORT=3001
API_BASE_URL=http://localhost:3001/api

# Configuration du serveur web (frontend)
WEB_PORT=3000

# Configuration du serveur mock (développement uniquement)
MOCK_SERVER_PORT=3002

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-api-domain.com

# Telegram Web App Configuration
WEB_APP_URL=https://your-frontend-domain.com
WEBAPP_URL=https://your-frontend-domain.com

# Proxy Configuration (optionnel)
# HTTP_PROXY=socks5://localhost:1080
# PROXY_HOST=localhost
# PROXY_PORT=1080

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
NODE_ENV=development

# API Timeout (en millisecondes)
API_TIMEOUT=15000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100